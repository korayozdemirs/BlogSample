@model IEnumerable<UserDTO>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pageHeader{
    <div class="note note-info">
        <p> Sistem kayıtlı kullanıcılar </p>
    </div>
}

<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>Sistemde Kayıtlı Kullanıcılar
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="#portlet-config" data-toggle="modal" class="config"> </a>
            <a href="javascript:;" class="reload"> </a>
            <a href="javascript:;" class="remove"> </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> FullName</th>
                        <th>UserName</th>
                        <th>Mail</th>
                        <th>Phone</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserDTO user in Model)
                    {
                        <tr>
                            <td>@user.Id </td>
                            <td> @user.FullName </td>
                            <td> @user.UserName </td>
                            <td> @user.Mail</td>
                            <td> @user.Phone</td>
                            <td>
                                <a class="btn btn-success btn-sm" asp-action="UserEdit" asp-route-id="@user.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="UserDelete" asp-route-id="@user.Id">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>

    </div>
</div>
